class Solution:
    def startStation(self, gas, cost):
        # Your code here
        curr,index, t_res = 0, 0, 0
        n = len(gas)
        visited = []
        for i in range(n):
            t_res +=gas[i]-cost[i] # track of total gas and cost so that i don't have to rotate and back 
            curr += gas[i] - cost[i]
            if curr<0:
                curr = 0
                index = i+1
        return index if t_res>=0 else -1
                
                
                
                
            
