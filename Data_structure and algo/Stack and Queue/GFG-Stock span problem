from collections import deque
class Solution:
    def calculateSpan(self, arr):
        # code here
        res = deque()
        n = len(arr)
        for i in range(n-1,-1,-1):
            count = 1
            for j in range(i-1,-1,-1):
                if arr[i]>=arr[j]:
                    count +=1
                else:
                    break
            res.appendleft(count)
        return res
