from collections import deque
class Solution:
    def snakesAndLadders(self, board: List[List[int]]) -> int:
        n = len(board)
        board.reverse()
        def pointoindex(square):
            row = (square-1)//n
            col = (square-1)%n
            if row%2:
                col = n-1-col
            return [row,col]
        res = deque()  #[index value and number of moves]
        res.append([1,0])
        visit = set()
        while res:
            square,moves = res.popleft()
            for i in range(1,7):
                nextp = square + i
                r,c = pointoindex(nextp)
                if board[r][c] != -1:
                    nextp = board[r][c]
                if nextp == n*n:
                    return moves + 1
                if nextp not in visit:
                    visit.add(nextp)
                    res.append([nextp, moves+1])
        return -1
                

        






        
