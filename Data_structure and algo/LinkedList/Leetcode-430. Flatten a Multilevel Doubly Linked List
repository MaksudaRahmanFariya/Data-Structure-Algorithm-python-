"""
# Definition for a Node.
class Node:
    def __init__(self, val, prev, next, child):
        self.val = val
        self.prev = prev
        self.next = next
        self.child = child
"""

class Solution:
    def flatten(self, head: 'Optional[Node]') -> 'Optional[Node]':
        if not head:
            return head
        curr = head 
        while curr:
            temp = curr.next
            if curr.child:
                temp = curr.next
                curr.next = curr.child
                curr.child.prev = curr
                curr.child = None
                lastchild = curr.next
                while lastchild.next:
                    lastchild = lastchild.next
                lastchild.next = temp
                if temp:
                    temp.prev = lastchild
            curr = curr.next    # child may have child also like 3 has child 7 and as well 7 has child 5.every node may have child or not
            #curr = 
        return head
        
