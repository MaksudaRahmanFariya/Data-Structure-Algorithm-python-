class Solution:
    def canSplitArray(self, nums: List[int], m: int) -> bool:
        n = len(nums)
        flag = 0
        if n<3:
            return True
        else:
            for i in range(n-1):
                if (nums[i]+nums[i+1])>=m:
                    flag = 1
                    break
                else:
                    flag = 0
        if flag==1:
            return True
        else:
            return False
                    
            
        
        
